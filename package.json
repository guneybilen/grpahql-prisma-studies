{
  "name": "graphql-basics",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start-when-prod-locally": "env-cmd ./config/prod.env node dist/index.js",
    "heroku-postbuild": "babel src --out-dir dist --copy-files",
    "dev": "env-cmd ./config/dev.env nodemon src/index.js --ext js,graphql --exec babel-node",
    "dev-without-nodemon": "babel-node src/index.js --ext js,graphql",
    "test": "env-cmd ./config/test.env jest --watch --runInBand --verbose=false",
    "token": "env-cmd ./config/dev.env prisma token",
    "get-schema": "graphql get-schema -p prisma --dotenv config/dev.env"
  },
  "jest": {
    "globalSetup": "./jest/globalSetup.js",
    "globalTeardown": "./jest/globalTeardown.js",
    "rootDir": "tests/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/.git/"
    ],
    "testRegex": "./.*.test.(js|ts|tsx)?$",
    "testEnvironment": "node",
    "bail": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "apollo-boost": "^0.1.27",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.2",
    "apollo-link": "^1.2.3",
    "apollo-link-context": "^1.0.14",
    "apollo-link-error": "^1.1.1",
    "apollo-link-http": "^1.5.5",
    "apollo-link-ws": "^1.0.9",
    "apollo-utilities": "^1.0.21",
    "bcryptjs": "^2.4.3",
    "cross-fetch": "^3.0.1",
    "env-cmd": "^8.0.2",
    "graphql": "^14.1.1",
    "graphql-cli": "^3.0.9",
    "graphql-yoga": "^1.17.2",
    "jsonwebtoken": "^8.4.0",
    "prisma-binding": "^2.3.2",
    "subscriptions-transport-ws": "^0.9.15",
    "ws": "^6.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "jest": "^24.0.0",
    "nodemon": ">1.17.5"
  }
}
