{
  "name": "graphql-basics",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start-when-prod-locally": "env-cmd ./config/prod.env node dist/index.js",
    "heroku-postbuild": "babel src --out-dir dist --copy-files",
    "dev": "env-cmd ./config/dev.env nodemon src/index.js --ext js,graphql --exec babel-node",
    "dev-without-nodemon": "babel-node src/index.js --ext js,graphql",
    "test": "env-cmd ./config/test.env jest --watch --runInBand --verbose=false",
    "get-schema": "graphql get-schema -p prisma --dotenv config/dev.env"
  },
  "jest": {
    "globalSetup": "./tests/jest/globalSetup.js",
    "globalTeardown": "./tests/jest/globalTeardown.js",
    "rootDir": "./",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/.git/"
    ],
    "testRegex": "/tests/.*.test.(js|ts|tsx)?$",
    "testEnvironment": "node",
    "bail": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "apollo-boost": "^0.1.27",
    "bcryptjs": "^2.4.3",
    "cross-fetch": "^3.0.1",
    "env-cmd": "^8.0.2",
    "graphql": "^14.1.1",
    "graphql-cli": "^3.0.9",
    "graphql-yoga": "^1.17.2",
    "jsonwebtoken": "^8.4.0",
    "prisma-binding": "^2.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "jest": "^24.0.0",
    "nodemon": ">1.17.5"
  }
}
